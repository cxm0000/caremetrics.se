---
import { getTranslations, getLocalizedPath, type Language } from '../i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang?: Language;
}

const currentLang = Astro.props.lang || 'sv';
const t = getTranslations(currentLang);
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href={getLocalizedPath('/', currentLang)} class="logo" aria-label="CareMetrics - Go to homepage">
        <img src="/logo.svg" alt="CareMetrics" class="logo-img" width="180" height="40" />
      </a>
      <div class="nav-links">
        <a href={getLocalizedPath('/#features', currentLang)} class="nav-link">{t.nav.features}</a>
        <a href={getLocalizedPath('/#about', currentLang)} class="nav-link">{t.nav.about}</a>
        <a href={getLocalizedPath('/#contact', currentLang)} class="nav-link">{t.nav.contact}</a>
        <LanguageSwitcher />
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    padding: 1rem 0;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
    height: 40px;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-img {
    height: 100%;
    width: auto;
    max-width: 180px;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width 0.3s;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .nav-links {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }

    .logo {
      font-size: 1.25rem;
    }
  }
</style>

