---
import Layout from '../../layouts/Layout.astro';
import { siteConfig } from '../../config/site';
import { getTranslations, type Language, supportedLanguages } from '../../i18n/utils';

export async function getStaticPaths() {
  return supportedLanguages.map((lang) => ({
    params: { lang },
    props: { lang },
  }));
}

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const dateLocale = lang === 'sv' ? 'sv-SE' : 'en-US';
---

<Layout>
  <section class="legal-page">
    <div class="container">
      <div class="legal-content">
        <h1>{t.terms.title}</h1>
        <p class="last-updated">{t.terms.lastUpdated} {new Date().toLocaleDateString(dateLocale, { year: 'numeric', month: 'long', day: 'numeric' })}</p>

        <h2>{t.terms.acceptance.title}</h2>
        <p set:html={t.terms.acceptance.description} />

        <h2>{t.terms.service.title}</h2>
        <p set:html={t.terms.service.description} />

        <h2>{t.terms.responsibilities.title}</h2>
        <p>{t.terms.responsibilities.description}</p>

        <h2>{t.terms.prohibited.title}</h2>
        <p>{t.terms.prohibited.description}</p>

        <h2>{t.terms.yourData.title}</h2>
        <p>{t.terms.yourData.description}</p>

        <h2>{t.terms.ip.title}</h2>
        <p set:html={t.terms.ip.description} />

        <h2>{t.terms.availability.title}</h2>
        <p>{t.terms.availability.description}</p>

        <h2>{t.terms.liability.title}</h2>
        <p set:html={t.terms.liability.description} />

        <h2>{t.terms.termination.title}</h2>
        <p>{t.terms.termination.description}</p>

        <h2>{t.terms.governing.title}</h2>
        <p>{t.terms.governing.description}</p>

        <h2>{t.terms.changes.title}</h2>
        <p>{t.terms.changes.description}</p>

        <h2>{t.terms.contact.title}</h2>
        <p>{t.terms.contact.question} <a href={`mailto:${siteConfig.contact.primaryEmail}`}>{siteConfig.contact.primaryEmail}</a></p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .legal-page {
    padding: 4rem 0;
    background: var(--color-bg);
  }

  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .legal-content h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .last-updated {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: 2rem;
    font-style: italic;
  }

  .legal-content h2 {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .legal-content h3 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .legal-content p {
    line-height: 1.8;
    margin-bottom: 1rem;
    color: var(--color-text-secondary);
  }

  .legal-content ul {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
    color: var(--color-text-secondary);
  }

  .legal-content a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .legal-content a:hover {
    text-decoration: underline;
  }

  .legal-content strong {
    color: var(--color-text);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .legal-content {
      padding: 2rem 1.5rem;
    }

    .legal-content h1 {
      font-size: 2rem;
    }

    .legal-content h2 {
      font-size: 1.5rem;
    }
  }
</style>

